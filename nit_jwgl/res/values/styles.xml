<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LableFont">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AlertFont">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ff6600</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MyDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
 <!-- 背景透明 -->
        <item name="android:windowFrame">@null</item>
 <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
 <!-- 无标题 -->
        <item name="android:windowIsFloating">true</item>
 <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
 <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
 <!-- 内容覆盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
 <!-- 窗口样式Dialog -->
        <item name="android:backgroundDimEnabled">true</item>
 <!-- 模糊 -->
     
　　</style>

    <style name="TitleTheme" parent="android:Theme">
        <item name="android:windowContentOverlay">@color/nonecolor</item>
        <item name="android:windowTitleSize">44dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/titelbg</item>
    </style>

    <style name="titelbg">
        <item name="android:background">@drawable/rectangle</item>
    </style>

    <color name="nonecolor">#00000000</color>

</resources>